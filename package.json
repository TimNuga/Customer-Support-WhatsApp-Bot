{
  "name": "customersupportbot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/server.js",
    "dev": "ts-node src/server.ts",
    "db:migrate:test": "dotenv -e .env.test cross-env NODE_ENV=test prisma migrate deploy",
    "db:migrate:reset:test": "dotenv -e .env.test cross-env NODE_ENV=test prisma migrate reset --force",
    "db:seed:test": "dotenv -e .env.test cross-env NODE_ENV=test ts-node prisma/seed.ts",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --force",
    "seed": "ts-node prisma/seed.ts",
    "test": "dotenv -e .env.test cross-env NODE_ENV=test jest --detectOpenHandles",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json,md}'"
  },
  "keywords": [],
